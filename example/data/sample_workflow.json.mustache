            "activitySpec": {
                "steps": [
                    {
                        "jar": "command-runner.jar",
                        "args": [
                            "spark-submit",
                            "s3://{{s3bucket}}/managed/health_violations.py",
                            "--data_source",
                            "s3://{{s3bucket}}/data/food_establishment_data.csv",
                            "--output_uri",
